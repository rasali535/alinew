# Server Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# Google Cloud / Vertex AI Configuration
# For Gemini 1.5 Pro, you need a Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your-project-id
VERTEX_AI_LOCATION=us-central1
GEMINI_MODEL=gemini-1.5-pro

# Database Configuration (Supabase Recommended)
# Example: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@[HOST]:[PORT]/postgres
DATABASE_URL=
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=true

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
API_KEY=your-api-key-for-client-authentication

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Gemini Configuration
GEMINI_MAX_OUTPUT_TOKENS=2048
GEMINI_TEMPERATURE=0.7
GEMINI_TOP_P=0.8
GEMINI_TOP_K=40

# Session Configuration
SESSION_EXPIRY_HOURS=24
MAX_CONTEXT_MESSAGES=10

# Email Configuration (Hostinger SMTP or other)
EMAIL_SERVICE=
EMAIL_HOST=smtp.hostinger.com
EMAIL_PORT=465
EMAIL_USER=
EMAIL_PASS=
LEAD_NOTIFICATION_EMAIL=
