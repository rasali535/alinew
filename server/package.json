{
    "name": "chatbot-backend",
    "version": "1.0.0",
    "description": "Production-ready AI chatbot backend with Gemini 3 Pro and PostgreSQL",
    "type": "module",
    "main": "dist/server.js",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc && node scripts/copy-assets.js",
        "start": "node dist/server.js",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [
        "chatbot",
        "gemini",
        "ai",
        "vertex-ai",
        "postgresql",
        "cloud-run"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@google-cloud/vertexai": "^1.7.0",
        "@types/nodemailer": "^7.0.9",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^7.2.0",
        "helmet": "^7.1.0",
        "nodemailer": "^8.0.1",
        "pg": "^8.11.5",
        "uuid": "^9.0.1",
        "winston": "^3.13.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.12.7",
        "@types/pg": "^8.11.6",
        "@types/supertest": "^6.0.2",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.7.0",
        "@typescript-eslint/parser": "^7.7.0",
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.2",
        "tsx": "^4.7.2",
        "typescript": "^5.4.5"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    }
}